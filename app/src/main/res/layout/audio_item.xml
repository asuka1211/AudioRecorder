<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/audio_item_frame">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/audio_item_btnPlay"
                android:layout_width="?listPreferredItemHeight"
                android:layout_height="?listPreferredItemHeight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/round_button_yellow"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/audio_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@string/record_btn" />
    </FrameLayout>

    <TextView
        android:id="@+id/audio_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:layout_toRightOf="@id/audio_item_frame"
        android:layout_toEndOf="@id/audio_item_frame"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"/>

</RelativeLayout>